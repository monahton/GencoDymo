Package: GencoDymo
Type: Package
Title: Data Extraction and Manipulation from the GENCODE Database
Version: 0.6.1
Date: 2021-11-25
Authors@R: c(
    person("Monah", "Abou Alezz", email = "monah.aboualezz@igm.cnr.it", role = c("aut", "cre", "cph")),
